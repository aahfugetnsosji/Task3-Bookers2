<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <div id="errors_explanation">
        <% if @book.errors.any? %>
          <h3>
            <% if @book.errors.count < 2 %>
              <%= @book.errors.count %> error prohibited this obj from being saved:
            <% else %>
              <%= @book.errors.count %> errors prohibited this obj from being saved:
            <% end %>
          </h3>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>
      
      <%= form_with model: @book do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label>
          <%= f.text_field :title, autofocus: true, class: "form-control book_title" %>
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <%= f.text_area :body, class: "form-control book_body" %>
        </div>
        <div class="form-group">
          <%= f.submit 'Update Book', class: "btn btn-success" %>
        </div>
      <% end %>
      <%= link_to "Show", book_path(@book.id), class: "book_#{@book.id}" %>
         | 
      <%= link_to "Back", books_path, class: "back" %>
    </div>
  </div>
</div>