<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'info', book: @book  %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        
        <tbody>
          
          <tr>
            <% @books.each do |book| %>
              <td><%= book.user.get_profile_image(80, 80) %></td>
              <td><%= book.title %></td>
              <td><%= book.body %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>