<h2>User info</h2>
<%= image_tag book.user.profile_image(100, 100) %>
  
<table class="table">
  <tbody>
    <!--<tr>なんらかのメッセージを挿入すると思われる</tr>-->
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </tbody>
</table>
  
<div class="row">
  <%= link_to user_edit do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>
  
<h2 class="mt-3">New Book</h2>
<%= form_with model: book, url: '/users', method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
    
  <h4>Opinion</h4>
  <%= f.text_area :body %>
    
  <%= f.submit 'Create Book' %>
<% end %>