<h2>User info</h2>
<%= image_tag user.get_profile_image(100, 100) %>
  
<table class="table">
  <tbody>
    <!--<tr>なんらかのメッセージを挿入すると思われる</tr>-->
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </tbody>
</table>
  
<div class="row">
  <%= link_to users_path do %>
    <span class="btn btn-outline-secondary btn-block"><i class="fas fa-user-cog"></i></span>
  <% end %>
</div>
  
<h2 class="mt-3">New Book</h2>
<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <div class="form-group">
    <label for="book_title">Title</label><br>
    <%= f.text_field :title, class: "form-controll book_title" %>
  </div>
  <div class="form-group">
    <label for="book_opinion">Opinion</label><br>
    <%= f.text_area :body, class: "form-controll book_body" %>
  </div>
  <div class="form-group">
    <%= f.submit 'Create Book', class: "btn btn-success" %>
  </div>
<% end %>