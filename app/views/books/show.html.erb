<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/info', user: @user %>
    </div>

    <div class="col-md-8 offset-md-1">
      
      <h2>Book detail</h2>
      
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user.id) do %>
                <%= image_tag @user.get_profile_image(80,80) %><br>
                <%= @user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book_find.id) do %>
                <%= @book_find.title %>
              <% end %>
            </td>
            <td><%= @book_find.body %></td>
            <% if @book_find.user == current_user %>
              <td>
                <%= link_to "Edit", edit_book_path(@book_find.id), class: "btn btn-sm btn-success" %>
              </td>
              <td>
                <%= link_to "Destroy", book_path, method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-sm btn-danger" %>
              </td>
            <% end %>
          </tr>
        </tbody>
      </table>
      
    </div>
    
  </div>
</div>